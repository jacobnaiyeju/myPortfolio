@model LRCAdminWebApp.LRCMobileServiceReference.PeriodicalClass

@{
    ViewBag.Title = "Update";
}

<h2>Update Periodical</h2>

@using (@Html.BeginForm("Edit", "Periodical", FormMethod.Post))
{
    @Html.HiddenFor(a => a.AccessionNumber)
    @Html.HiddenFor(a => a.PeriodicalsId)
    <div style="float:left;">
        @Html.ValidationSummary(false)
        @Html.LabelFor(model => model.Status)<br />
        @foreach (var item in ViewBag.Status as LRCAdminWebApp.Controllers.PeriodicalController.Status[])
        {
            var number = (int)item;
            <input type="radio" name="Status" id="@item" value="@number.ToString()" />
            <label for="@item">@item</label>
        }
    </div>
    <div style="clear:both"></div>
    <hr />
    <div style="float:left;width:350px">
        <div style="float:right;">
            @Html.LabelFor(a => a.ISSN)
            @Html.EditorFor(a => a.ISSN)
        </div>
        <div style="float:right;">
            @Html.LabelFor(a => a.Title)
            @Html.EditorFor(a => a.Title)
        </div>
        <div style="float:right;">
            @Html.LabelFor(a => a.Publisher)
            @Html.EditorFor(a => a.Publisher)
        </div>
        <div style="float:right;">
            <label for="PublisherDate">PublisherDate</label>
            <input name="PublisherDate" id="PublisherDate" type="datetime" value="@DateTime.Now" />
        </div>
        <div style="float:right;">
            @Html.LabelFor(a => a.Author)
            @Html.EditorFor(a => a.Author)
        </div>
        <div style="float:right;">
            @Html.LabelFor(a => a.Edition)
            @Html.EditorFor(a => a.Edition)
        </div>
    </div>
    <div style="clear:both"></div>
    <hr />

    <input type="submit" value="Update" />
}
<hr />
@Html.ActionLink("Go back to Listing", "Index")
