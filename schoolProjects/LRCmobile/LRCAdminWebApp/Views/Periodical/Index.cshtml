@model IEnumerable<LRCAdminWebApp.LRCMobileServiceReference.PeriodicalClass>

@{
    ViewBag.Title = "Periodicals";
}

<h2>Periodicals</h2>
<style>
    table,
    th,
    td {
        border: 2px solid black;
    }
    th{
        background-color:red;
    }
    td {
        background-color: yellow;
    }
</style>

@Html.ActionLink("Create new Periodical", "Create","Periodical")

<table>
    <tr>
        <th>@Html.DisplayNameFor(model => model.ISSN)</th>
        <th>@Html.DisplayNameFor(model => model.Author)</th>
        <th>@Html.DisplayNameFor(model => model.Status)<span>&nbsp;&nbsp;&nbsp;&nbsp;</span></th>
        <th>@Html.DisplayNameFor(model => model.Title)</th>
    </tr>
    @foreach (var item in Model)
	{
        <tr>
            <td>@Html.DisplayFor(model => item.ISSN)<span>&nbsp;&nbsp;&nbsp;&nbsp;</span></td>
            <td>@Html.DisplayFor(model => item.Author)<span>&nbsp;&nbsp;&nbsp;&nbsp;</span></td>
            <td>@Html.DisplayFor(model => item.Status)<span>&nbsp;&nbsp;&nbsp;&nbsp;</span></td>
            <td>@Html.DisplayFor(model => item.Title)<span>&nbsp;&nbsp;&nbsp;&nbsp;</span></td>
            <td>
                @Html.ActionLink("Details", "Details", "Periodical",
                    new { id = item.AccessionNumber }, null) &nbsp; &nbsp; &nbsp;&nbsp; &nbsp;
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Periodical",
                    new { id = item.AccessionNumber }, null) &nbsp; &nbsp; &nbsp;&nbsp; &nbsp;
            </td>
            <td>
                @Html.ActionLink("view Holds", "viewHolds", "Transactions",
                new { id = item.AccessionNumber }, null) &nbsp; &nbsp; &nbsp;&nbsp; &nbsp;
            </td>
            <td>
                @Html.ActionLink("Hold Item", "placeHold", "Transactions",
                new { id = item.AccessionNumber }, null) &nbsp; &nbsp; &nbsp;&nbsp; &nbsp;
            </td>
            <td>
                @if (item.Status == "A")
                {
                    @Html.ActionLink("Loan Item", "Create", "Transactions",
                    new { id = item.AccessionNumber }, null) ;
                    <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                }
            </td>
            <td>
                @if (item.Status != "R")
                {
                    @Html.ActionLink("Reserve Item", "createReserve", "Transactions",
                    new { id = item.AccessionNumber }, null) ;
                    <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                }
            </td>
        </tr>
	}
</table>


